<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <by.equestriadev.nikishin_rostislav.views.CircledSquareView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/color_icon"
        android:layout_width="@dimen/list_icon_size"
        android:layout_height="@dimen/list_icon_size"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/base_padding"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/color_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/color_icon"
        android:layout_toEndOf="@+id/color_icon"
        android:maxLines="1"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textIsSelectable="false"
        tools:text="Text 1"
        android:layout_toRightOf="@+id/color_icon" />

    <TextView
        android:id="@+id/another_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/color_text"
        android:layout_toEndOf="@+id/color_icon"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textIsSelectable="false"
        tools:text="Text 2"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/color_icon" />
</RelativeLayout>